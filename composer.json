{
    "name": "amin/shop-spark",
    "description": "Modular WooCommerce enhancement plugin.",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "autoload": {
      "psr-4": {
        "ShopSpark\\": "includes/"
      },
    "files": [ "includes/functions.php" ]
    },
    "authors": [
      {
        "name": "Al Amin",
        "email": "hmalaminmb4@gmail.com"
      }
    ],
    "minimum-stability": "stable",
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.12",
        "wp-coding-standards/wpcs": "^3.1"
    },
    "scripts": {
    "test": "phpunit",
    "phpcs": "phpcs --standard=WordPress  --ignore=*.js src includes",
    "phpcbf": "phpcbf --standard=WordPress  --ignore=*.js ./includes"
},
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
